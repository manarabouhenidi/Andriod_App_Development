<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistic"
    android:background="@color/White"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:fontFamily="@font/arbutus_slab"
                android:gravity="center"
                android:text=" Appointments Statistics"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="45dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="52dp"
                tools:text="Appointments Statistics" />

            <TextView
                android:id="@+id/txtIns6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"

                android:fontFamily="serif"
                android:gravity="center"
                android:text="This Page Displays Statistics of Upcoming/ Past Appiontment"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/txtInfo1"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_margin="20px"
                android:background="#99fffbfb"
                android:fontFamily="serif"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="20dp"
                android:typeface="serif"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="52dp"
                tools:text="You're a Tutor" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/listDivider"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_margin="30px"
                android:gravity="center"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <TextView
                        android:id="@+id/upcomingapp"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:text="Upcoming Appiontments "
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/numapp"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:paddingTop="50dp"
                        android:text="12"
                        android:textAlignment="center"
                        android:textColor="@color/Green"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/pastapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Past \n Appiontments "
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/numpast"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingTop="50dp"
                        android:text="129"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/Deniedapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Denied \n Appiontments"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/numdenyapp"
                        android:layout_width="101dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:paddingTop="50dp"
                        android:text="60"
                        android:textAlignment="center"
                        android:textColor="@color/Red"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="237dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Total Number of Appointments"
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="bold"


                        />

                    <TextView
                        android:id="@+id/totalnum"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="340dp"
                        android:text="34348"
                        android:textColor="@color/Deep_sky_blue"
                        android:textStyle="bold" />


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_margin="30px"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bbarchart"
                    android:layout_width="237dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/creativebutton"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Bar Chart"
                    android:textColorLink="?attr/actionModeSplitBackground"
                    android:textSize="18sp"

                    tools:layout_editor_absoluteX="200dp"
                    tools:layout_editor_absoluteY="285dp" />

                <Button
                    android:id="@+id/bback"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/creativebutton"
                    android:text="Back"
                    android:textColor="#131de3"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>

