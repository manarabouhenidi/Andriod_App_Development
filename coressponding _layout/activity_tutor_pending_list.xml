<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="14"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:id="@+id/main_layout" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"><![CDATA[
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListofTutors">


]]>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:background="#bebde7ff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTutorListTitle"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_margin="15px"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="center"
            android:text="Pending Appointments"
            android:textColor="#000"
            android:textSize="40sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="52dp"
            tools:text="Pending Appointments" />

        <TextView
            android:id="@+id/txtIns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Tutors have not yet approved the following session request"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20px"
        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/AppointmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20px"
        android:background="@color/White">

    </ListView>

</LinearLayout>