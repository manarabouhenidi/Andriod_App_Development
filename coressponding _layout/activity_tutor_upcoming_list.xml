<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="14" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" android:background="@color/White" android:id="@+id/main_layout" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"><![CDATA[
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListofTutors">


]]>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bebde7ff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTutorListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="center"
            android:text="Upcoming Appointments"
            android:textColor="#000"
            android:textSize="45sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="52dp"
            tools:text="Upcoming Appointments" />

        <TextView
            android:id="@+id/txtIns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Here are your upcoming appointments"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20px"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/AppointmentList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:background="@drawable/com_facebook_button_icon_white">

        </ListView>
    </ScrollView>
</LinearLayout>